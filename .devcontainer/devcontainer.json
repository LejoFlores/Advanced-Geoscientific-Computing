{
  "name": "Advanced Geoscientific Computing Codespace",

  // Use the conda feature: installs Micromamba, then solves environment.yml
  "features": {
    "ghcr.io/devcontainers/features/conda:1": {
      "installMamba": true,
      "condaConfig": "../environment.yml"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/geos505/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  },

  "postCreateCommand": "pre-commit install && python -m ipykernel install --user --name geos505 --display-name 'Python (geos505)'"
}
